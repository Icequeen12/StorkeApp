<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MenuActivity"
    android:orientation="vertical"
    android:background="@mipmap/back"
    android:padding="20dp">


    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shapelogin"
        android:drawableLeft="@drawable/pen"
        android:onClick="btnWriting_Clicked"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="Pisanie"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shapelogin"
        android:drawableLeft="@drawable/book"
        android:onClick="btnRead_Clicked"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="Czytanie"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shapelogin"
        android:drawableLeft="@drawable/cal"
        android:onClick="btnCal_Clicked"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="Obliczenia"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shapelogin"
        android:drawableLeft="@drawable/shapes"
        android:onClick="btnPic_Clicked"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="KsztaÅ‚ty"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>

